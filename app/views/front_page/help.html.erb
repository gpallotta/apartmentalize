    <ul id="help-link-list">
      <li><%= link_to 'Getting started', '#getting-started' %></li>
      <li><%= link_to 'Creating chores', '#creating-chores' %></li>
      <li><%= link_to 'Cycling chores', '#cycling-chores' %></li>
      <li><%= link_to 'Creating claims', '#creatimg-claims' %></li>
      <li><%= link_to 'Marking claims as paid', '#marking-claim-paid' %></li>
